<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Search Movie by Title"
        android:textColor="#ffffff"
        android:id="@+id/textView7"
        android:layout_gravity="center_horizontal" />

    <SearchView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:hint="Search Movie by Title"
        android:id="@+id/searchView"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Search Movie by Genre"
        android:textColor="#ffffff"
        android:id="@+id/textView8"
        android:layout_gravity="center_horizontal" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:drawSelectorOnTop="true"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingLeft="10dp"
        android:entries="@array/array_name"  />



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginLeft="50dp"
            android:clickable="true"
            android:onClick="movie"
            android:src="@drawable/poster"
            android:id="@+id/imageView3" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="The SpongeBob Movie: Sponge out of Water"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:id="@+id/textView9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Animation, Adventure, Comedy"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:id="@+id/textView10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rating: 9.5"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:id="@+id/textView11" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>